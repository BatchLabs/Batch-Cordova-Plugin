{
  "compilerOptions": {
    // Do not set anything higher than es5, or methods on "batch" will disappear for
    // some unknown reason.
    "target": "es5",
    "sourceMap": false,
    "allowJs": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["dom", "es2015"],
    "types": ["cordova"]
  },
  "include": ["src/**/*", "types/**/*"],
  "exclude": ["node_modules"]
}
